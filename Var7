def find_max(arr):
    # Базовый случай: если массив состоит из одного элемента, возвращаем его
    if len(arr) == 1:
        return arr[0]
    
    # Рекурсивный случай: сравниваем первый элемент с максимумом оставшихся элементов
    else:
        sub_max = find_max(arr[1:])
        return arr[0] if arr[0] > sub_max else sub_max

# Пример использования
arr = [8, 3, 2, 10, 15, 7]
max_element = find_max(arr)
print(f"Максимальный элемент массива: {max_element}")  # Выведет: Максимальный элемент массива: 15
