def sum_digits(n):
    # Базовый случай: если число одноцифровое, возвращаем само число
    if n < 10:
        return n
    
    # Рекурсивный случай: сумма последней цифры и результата от остальных цифр
    else:
        last_digit = n % 10      # последняя цифра
        remaining_number = n // 10   # оставшаяся часть числа без последней цифры
        return last_digit + sum_digits(remaining_number)

# Проверяем работу функции
print(sum_digits(123))  # должно вывести 6 (1+2+3=6)
