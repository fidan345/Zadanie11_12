class TreeNode:
    def __init__(self, value):
        self.value = value
        self.left = None
        self.right = None


# Preorder-обход (корень → левое поддерево → правое поддерево)
def preorder_traversal(root):
    result = []
    if root:
        result.append(root.value)               # Посещаем корневой узел
        result.extend(preorder_traversal(root.left))  # Обходим левое поддерево
        result.extend(preorder_traversal(root.right)) # Обходим правое поддерево
    return result


# Inorder-обход (левое поддерево → корень → правое поддерево)
def inorder_traversal(root):
    result = []
    if root:
        result.extend(inorder_traversal(root.left))  # Обходим левое поддерево
        result.append(root.value)                   # Посещаем корневой узел
        result.extend(inorder_traversal(root.right)) # Обходим правое поддерево
    return result


# Postorder-обход (левое поддерево → правое поддерево → корень)
def postorder_traversal(root):
    result = []
    if root:
        result.extend(postorder_traversal(root.left))  # Обходим левое поддерево
        result.extend(postorder_traversal(root.right)) # Обходим правое поддерево
        result.append(root.value)                     # Посещаем корневой узел
    return result


# Создание примера бинарного дерева
root = TreeNode(1)
root.left = TreeNode(2)
root.right = TreeNode(3)
root.left.left = TreeNode(4)
root.left.right = TreeNode(5)

# Примеры обходов
print("Preorder:", preorder_traversal(root))     # Output: [1, 2, 4, 5, 3]
print("Inorder:", inorder_traversal(root))       # Output: [4, 2, 5, 1, 3]
print("Postorder:", postorder_traversal(root))   # Output: [4, 5, 2, 3, 1]
